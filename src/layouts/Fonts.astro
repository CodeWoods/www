---
/*
  This is not a layout but just a component that's used in `_document.astro`.
*/
---

<Fragment>
  <link
    rel='preload'
    href='/fonts/subset/LXGWWenKaiMonoTC-Regular.woff2'
    as='font'
    type='font/woff2'
    crossorigin='anonymous'
    fetchpriority='high'
  />
  <link
    rel='preload'
    href='/fonts/subset/LXGWWenKaiMonoTC-Bold.woff2'
    as='font'
    type='font/woff2'
    crossorigin='anonymous'
    fetchpriority='high'
  />
  <link
    rel='preload'
    href='/fonts/londrina-shadow-latin-400-normal.woff2'
    as='font'
    type='font/woff2'
    crossorigin='anonymous'
  />
  <link
    rel='preload'
    href='/fonts/alegreya-sans-latin-400-normal.woff2'
    as='font'
    type='font/woff2'
    crossorigin='anonymous'
  />
  <link
    rel='preload'
    href='/fonts/alegreya-sans-latin-400-italic.woff2'
    as='font'
    type='font/woff2'
    crossorigin='anonymous'
  />
  <link
    rel='preload'
    href='/fonts/alegreya-sans-latin-700-normal.woff2'
    as='font'
    type='font/woff2'
    crossorigin='anonymous'
  />
  <link
    rel='preload'
    href='/fonts/alegreya-sans-latin-700-italic.woff2'
    as='font'
    type='font/woff2'
    crossorigin='anonymous'
  />
  <style is:inline>
    /* LXGW WenKai Mono v1.000 - zh-Hant */
    @font-face {
      font-family: 'LXGW WenKai Mono';
      font-style: normal;
      font-weight: 400;
      font-display: swap;
      src: url('/fonts/subset/LXGWWenKaiMonoTC-Regular.woff2') format('woff2');
    }
    @font-face {
      font-family: 'LXGW WenKai Mono';
      font-style: bold;
      font-weight: 700;
      font-display: swap;
      src: url('/fonts/subset/LXGWWenKaiMonoTC-Bold.woff2') format('woff2');
    }
    /* Londrina Shadow - Latin */
    @font-face {
      font-family: 'Londrina Shadow';
      font-style: normal;
      font-display: swap;
      font-weight: 400;
      src: url('./fonts/londrina-shadow-latin-400-normal.woff2') format('woff2');
    }
    /* Alegreya Sans - Latin */
    @font-face {
      font-family: 'Alegreya Sans';
      font-style: normal;
      font-display: swap;
      font-weight: 400;
      src: url('./fonts/alegreya-sans-latin-400-normal.woff2') format('woff2');
    }
    @font-face {
      font-family: 'Alegreya Sans';
      font-style: italic;
      font-display: swap;
      font-weight: 400;
      src: url('./fonts/alegreya-sans-latin-400-italic.woff2') format('woff2');
    }
    @font-face {
      font-family: 'Alegreya Sans';
      font-style: normal;
      font-display: swap;
      font-weight: 700;
      src: url('./fonts/alegreya-sans-latin-700-normal.woff2') format('woff2');
    }
    @font-face {
      font-family: 'Alegreya Sans';
      font-style: italic;
      font-display: swap;
      font-weight: 700;
      src: url('./fonts/alegreya-sans-latin-700-italic.woff2') format('woff2');
    }
  </style>
</Fragment>
