{
  "name": "@codewoods/www",
  "type": "module",
  "version": "0.0.0-development",
  "private": true,
  "license": "(MIT OR CC-BY-NC-4.0)",
  "homepage": "https://github.com/codewoods/www",
  "scripts": {
    "astro": "astro",
    "dev": "MODE=development astro dev",
    "start": "npm run dev",
    "prebuild": "npm run txt:fontsubset && npm run txt:fix",
    "build": "MODE=production astro build",
    "preview": "astro preview",
    "build:p": "npm run build && npm run preview",
    "postbuild": "pagefind --source dist --bundle-dir pagefind",
    "sec-check": "secretlint '**/*'",
    "typecheck": "astro check && tsc --noEmit",
    "fmt": "prettier --write --ignore-path .gitignore . --loglevel warn --plugin-search-dir=. --cache --cache-strategy content --cache-location ./node_modules/.cache/.prettiercache",
    "txt:up": "node ./scripts/last-mod-updater.cjs src/content/pages/*.md",
    "txt:fontsubset": "sh fontsubset.sh",
    "txt:lint": "textlint ./src/content",
    "txt:fix": "textlint --fix ./src/content",
    "css:lint": "stylelint --custom-formatter=node_modules/stylelint-formatter-pretty --aei --cache --cache-strategy content --cache-location ./node_modules/.cache/.stylelintcache '{**/*,*}.{scss,css}' > lint_css.txt",
    "css:fix": "stylelint --fix --custom-formatter=node_modules/stylelint-formatter-pretty --aei --cache --cache-strategy content --cache-location ./node_modules/.cache/.stylelintcache '{**/*,*}.{scss,css}'",
    "js:lint": "eslint --format=pretty --cache --cache-strategy content --cache-location ./node_modules/.cache/.eslintcache '{**/*,*}.{js,ts,mjs,astro,mdx,md}' > lint_js.txt",
    "js:fix": "eslint --fix --debug --format=pretty --cache --cache-strategy content --cache-location ./node_modules/.cache/.eslintcache '{**/*,*}.{js,ts,mjs,astro,mdx,md}'",
    "test": "npx -y concurrently \"npm run test:unit\" \"npm run test:e2e\"",
    "test:unit": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:playwright": "playwright test",
    "test:e2e": "start-server-and-test 'npm run dev' http://localhost:9000 'npm run test:playwright'",
    "clear": "node scripts/clear.js",
    "postinstall": "[[ \"$CI\" != 'true' ]] && husky install || echo 'Skipping husky install'",
    "deploy": "firebase deploy --only hosting",
    "deploy:mock": "firebase emulators:start",
    "deploy:stage": "firebase hosting:channel:deploy stage --expires 10m"
  },
  "dependencies": {
    "@astrojs/mdx": "^0.19.0",
    "@astrojs/prefetch": "^0.2.1",
    "@astrojs/rss": "^2.3.2",
    "@astrojs/solid-js": "^2.1.1",
    "astro": "^2.3.1",
    "astro-compress": "1.1.42",
    "astro-remark-eleventy-image": "^2.0.1",
    "axios": "^1.4.0",
    "budoux": "^0.5.1",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "gray-matter": "^4.0.3",
    "mdast-util-to-string": "^3.2.0",
    "medium-zoom": "^1.0.8",
    "refractor": "^4.8.1",
    "rehype-accessible-emojis": "^0.3.2",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-prism-diff": "^1.1.2",
    "rehype-prism-plus": "^1.5.1",
    "rehype-slug": "^5.1.0",
    "remark-directive": "^2.0.1",
    "remark-directive-rehype": "^0.4.2",
    "remark-flexible-code-titles": "^1.1.2",
    "sanitize-html": "^2.10.0",
    "solid-js": "^1.7.5",
    "unist-util-visit": "^4.1.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@playwright/test": "^1.33.0",
    "@proofdict/textlint-rule-proofdict": "^3.1.2",
    "@secretlint/secretlint-rule-preset-recommend": "^6.2.3",
    "@textlint/textlint-plugin-markdown": "^13.3.2",
    "@types/eslint": "^8.37.0",
    "@types/prettier": "^2.7.2",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vitest/coverage-c8": "^0.31.0",
    "concurrently": "^8.0.1",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-semistandard": "^17.0.0",
    "eslint-formatter-pretty": "^5.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-astro": "^0.27.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-markdownlint": "^0.4.1",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-sonarjs": "^0.19.0",
    "happy-dom": "^9.18.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "pagefind": "^0.12.0",
    "prettier": "^2.8.8",
    "prettier-plugin-astro": "0.8.1",
    "secretlint": "^6.2.3",
    "start-server-and-test": "^2.0.0",
    "stylelint": "^15.6.0",
    "stylelint-config-clean-order": "^5.0.1",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.7.0",
    "stylelint-formatter-pretty": "^3.2.0",
    "stylelint-no-unsupported-browser-features": "^6.1.0",
    "stylelint-order": "^6.0.3",
    "stylelint-plugin-defensive-css": "^0.3.0",
    "textlint": "^13.3.2",
    "textlint-filter-rule-comments": "^1.2.2",
    "textlint-rule-no-dead-link": "^5.1.2",
    "textlint-rule-preset-ja-spacing": "^2.3.0",
    "textlint-rule-preset-ja-technical-writing": "^7.0.0",
    "textlint-rule-spellcheck-tech-word": "^5.0.0",
    "typescript": "^5.0.4",
    "vitest": "^0.31.0"
  },
  "npm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/core",
        "rollup",
        "vite"
      ]
    }
  },
  "browserslist": [
    "cover 80% in alt-AS",
    "maintained node versions",
    "Firefox ESR",
    "iOS >= 13",
    "not dead"
  ]
}
